<div class="row">
  <div class="small-9 columns"><h2>Sign up</h2></div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="row">
      <div class="large-5 columns">
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>

    <div class="row">
      <div class="large-5 columns">
        <%= f.password_field :password, autocomplete: "off", class: "email-field" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
    </div>

    <div class="row">
      <div class="large-5 columns">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="actions">
        <div class="large-5 columns"><%= f.submit "Sign up" %></div>
      </div>
    </div>
<% end %>

    <div class="row">
      <div class="large-5 columns"><%= render "devise/shared/links" %></div>
    </div>

